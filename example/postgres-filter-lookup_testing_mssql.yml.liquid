  min_output_tasks: 1

in:
  type: sqlserver
  host: Localhost
  driver_path: "..path../mssql-jdbc-10.2.0.jre17.jar"
  user: "usert"
  password: "password"
  database: "test"
  table: customer
filters:
  - type: postgress_lookup
    host: localhost
    port: 5432
    database: test
    username: postgres
    password: 1234
    schema: public
    table_name: car
    mapping_from:
      - car_name
      - company
    mapping_to:
      - model
      - brand
    new_columns:
      - { name: car_id, type: string }
      - { name: category, type: string }
      - { name: fuel_capacity, type: string }
